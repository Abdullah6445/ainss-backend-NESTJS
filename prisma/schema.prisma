generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  userId              Int       @id @default(autoincrement())
  userName            String
  userAge             Int
  userContact         String
  userGender          Gender
  userEmergencyContact String

  teacher   Teacher?
  student   Student?
}

model Teacher {
  teacherId Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [userId])

  students  Student[]   // 1 Teacher â†’ many Students
}

model Student {
  studentId Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [userId])

  teacherId Int
  teacher   Teacher  @relation(fields: [teacherId], references: [teacherId])

  attendance Attendance[]
}

model Attendance {
  attendanceId Int      @id @default(autoincrement())
  date         DateTime
  status       String

  studentId Int
  student   Student @relation(fields: [studentId], references: [studentId])
}

